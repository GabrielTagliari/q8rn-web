{
  "name": "q8rn",
  "version": "1.0.0",
  "description": "Questionário dos oito remédios naturais",
  "productName": "Q8RN",
  "cordovaId": "org.cordova.quasar.app",
  "author": "Gabriel Tagliari Rodrigo <gabriel.tagliari93@gmail.com>",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.vue src",
    "test": "jest --no-cache",
    "test:unit": "vue-cli-service test:unit --no-cache",
    "build": "quasar build -m pwa -t mat",
    "start": "node server.js",
    "heroku-postbuild": "npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "*",
    "connect-history-api-fallback": "^1.5.0",
    "express": "*",
    "vue-i18n": "^7.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.0",
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-plugin-pwa": "^3.0.0-beta.15",
    "@vue/cli-plugin-unit-jest": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "*",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.3.0",
    "express": "*",
    "jest": "^23.6.0",
    "jest-transform-stub": "^1.0.0",
    "quasar-cli": "^0.17.0",
    "strip-ansi": "=3.0.1",
    "vue-jest": "^3.0.1",
    "vue-test-utils": "^1.0.0-beta.11"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0",
    "yarn": ">= 1.6.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "jest": {
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.(js|jsx)?$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    }
  }
}
